{
    "manifest_version": 3,
    "name": "Internship Popup Extension",
    "version": "1.0",
    "description": "Shows a popup when the word 'Internship' is found on a web page.",
    "permissions": ["storage", "declarativeContent", "activeTab", "scripting","tabs",
    "notifications",
    "http://*/",
    "https://*/"],
    "externally_connectable": {
      "matches": ["<all_urls>"]
  },
    "host_permissions": ["https://*/*","http://*/"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "logo.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "web_accessible_resources": [{
      "resources": ["bahubali.mp3"],
      "matches": ["<all_urls>"]
      }]
  }

  